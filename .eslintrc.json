{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["prettier"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "strict": 0,
    // "indent": ["error", 2, {"SwitchCase": 1}],
    "semi": ["error", "never"],
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off"
  }
}
